global-reset()

*
  box-sizing border-box

body
  font-size $sp-font-size
  line-height $sp-line-height
  font-weight normal
  font-family $helvetica
  background blue

.hidden 
  display none

// *** tables ***
$table-blue = #f4f8fc
$table-light-blue = #ecf2f9
$table-col = #dfe9f5

.sp-tables
  table
    border 0px
    width 100%
  table td, table th 
    border 1px solid #fff
    min-width 100px
    padding 5px 10px
  table thead tr
    background $sp-general-blue
    color #fff
  table tbody tr.odd
    background $table-blue
  table tbody tr.even
    background $table-light-blue
  table td.firstcol
    background $table-col
    color #000
  table tbody td.colspacer
    background #fff
    margin 0
    padding 0
    height 4px

